<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>FakeBook</title>
</head>

<body>
    <div class="wrapper craeteContainer">
        <div class="logo">
            <img src="/images/logo-min.jpg" alt="">
        </div>
        <div class="text-center mt-4 name">
            Create User
        </div>
        <form class="p-3 mt-3 row" method="post" action="/createUser">
            <div class="col-md-6 col-sm-12">
                <div class="form-field d-flex align-items-center">
                    <span class="fa fa-user"></span>
                    <input type="text" name="username" placeholder="Name" required>
                </div>
                <div class="form-field d-flex align-items-center">
                    <span class="fa fa-user"></span>
                    <input type="text" name="email" placeholder="Email" required>
                </div>

                <div class="form-field d-flex align-items-center">
                    <span class="fa fa-key"></span>
                    <input type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-field d-flex align-items-center">
                    <input type="hidden" name="profile" id="profile" value="default">
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-field d-flex align-items-center">
                    <div class="profileContainer">
                        <% for(var i=0; i<images.length; i++) {%>
                            <img class="profileOptions" id="<%= images[i] %>" src="/images/<%= images[i] %>.svg"
                                alt="profile">
                            <% } %>
                    </div>
                </div>
            </div>


            <% if (typeof error !=='undefined' && error) { %>
                <div class="Loginalert">
                    <span>
                        <%= error %>
                    </span>
                </div>
                <% } %>
                    <button class="btn mt-3" type="submit">Create</button>
        </form>
        <div class="text-center fs-6 pull-right">
            <a href="/">Login</a>
        </div>
    </div>
    <script src="./libraries/fontawesome.js" crossorigin="anonymous"></script>
    <script src="./libraries/jquery.min.js"></script>
    <script src="./libraries/bootstrap.bundle.min.js"></script>
    <script src="/js/user.js"></script>

</body>

</html>