<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.png" />
    <link rel="stylesheet" href="./css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>FakeBook</title>
  </head>

  <body>
    <div class="wrapper">
      <div class="logo">
        <img src="/images/logo-min.jpg" alt="" />
      </div>
      <div class="text-center mt-4 name">FakeBook</div>
      <form class="p-3 mt-3" method="post" action="/login">
        <div class="form-field d-flex align-items-center">
          <span class="fa fa-user"></span>
          <input
            type="text"
            name="email"
            id="email"
            placeholder="Email"
            required
          />
        </div>

        <div class="form-field d-flex align-items-center">
          <span class="fa fa-key"></span>
          <input
            type="password"
            name="password"
            id="pwd"
            placeholder="Password"
            required
          />
        </div>
        <% if (typeof error !=='undefined' && error) { %>
        <div class="Loginalert">
          <span> <%= error %> </span>
        </div>
        <% } %>
        <button class="btn mt-3" type="submit">Login</button>
      </form>
      <div class="text-center fs-6 pull-right">
        <a href="/createUser">Create an account</a>
      </div>
    </div>
    <script src="./libraries/fontawesome.js" crossorigin="anonymous"></script>
    <script src="./libraries/bootstrap.bundle.min.js"></script>
  </body>
</html>
